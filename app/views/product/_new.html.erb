<div id="new_page">
  <h5>Making New Product:</h5>
  <div id="new_form">
    <%= form_with scope: :product, url: '/product', local: true do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: 'form-control', required: true, min: 0 %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
